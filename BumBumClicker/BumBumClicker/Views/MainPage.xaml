<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BumBumClicker.Views.MainPage"
             xmlns:viewModels="clr-namespace:BumBumClicker.ViewModels"
             BindingContext="{viewModels:MainPageViewModel}"
             Title="BumBumClicker"
             xmlns:local="clr-namespace:BumBumClicker">
    <ContentPage.ToolbarItems>
        <ToolbarItem  Clicked="Store_Clicked" Icon="ic_shop_white_24dp.png">
            
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Bum" WidthRequest="120" HeightRequest="120" BorderRadius="60" HorizontalOptions="Center" FontSize="Large" Command="{Binding ClickCommand}"/>
            <Label Text="number of Bums" FontSize="Large" HorizontalOptions="Center"/>
            <Label Text="{Binding Bums}" FontSize="Large" HorizontalOptions="Center"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>