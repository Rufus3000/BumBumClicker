<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BumBumClicker.Views.MainPage"
             xmlns:converters="clr-namespace:BumBumClicker.Converters"
             xmlns:viewModels="clr-namespace:BumBumClicker.ViewModels"
             BindingContext="{viewModels:MainPageViewModel}"
             Title="BumBumClicker"
             xmlns:local="clr-namespace:BumBumClicker"
             >
    <ContentPage.ToolbarItems>
        <ToolbarItem  Clicked="Store_Clicked" Icon="ic_shop_white_24dp.png"></ToolbarItem>
        <ToolbarItem  Clicked="Achievements_Clicked" Icon="baseline_assignment_turned_in_white_24.png"></ToolbarItem>
        <ToolbarItem  Clicked="Profile_Clicked" Icon="baseline_face_white_24.png"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:ImageSourceConverter x:Key="ImageSourceConverter"></converters:ImageSourceConverter>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Bum" WidthRequest="240" HeightRequest="240" CornerRadius="120"
                        HorizontalOptions="Center" FontSize="Large" Command="{Binding ClickCommand}" />
                <Label Text="Number of Bums" FontSize="Large" HorizontalOptions="Center" />
                <Label Text="{Binding Bums}" FontSize="Large" HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>